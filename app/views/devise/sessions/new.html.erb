<div class="page-container">

  <img src="/images/logo.png" alt="Logo">
    <h3 class="tagline">Call a play.</h3>
  <div class="vert-form">

    <h2>Sign in</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><%= f.label :email, :class => "label" %><br />
      <%= f.email_field :email, :autofocus => true, :placeholder => "email" %></div>

      <div><%= f.label :password, :class => "label" %><br />
      <%= f.password_field :password, :placeholder => "password" %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "remember_me" %></div>
      <% end -%>

      <div><%= f.submit "Sign in", :class => "btn btn-primary btn-lg" %></div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>

</div>
