<div class="page-container">

  <img src="/images/logo.png" alt="Logo">
    <h3 class="tagline">Call a play.</h3>
  <div class="vert-form">

    <h2>Sign in</h2>

    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      <div><%= f.label :email, :class => "label" %><br />
      <%= f.email_field :email, :placeholder => "email", :class => "form_field" %></div>

      <div><%= f.label :password, :class => "label" %><br />
      <%= f.password_field :password, :placeholder => "password", :class => "form_field" %></div>

      <% if devise_mapping.rememberable? -%>
        <div><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "remember_me" %></div>
      <% end -%>

      <div><%= f.submit "Sign in", :class => "btn btn-success btn-lg" %></div>
    <% end %>

    <span class="linkspan"> or </span><%= render "devise/shared/links" %>
  </div>
</div>
