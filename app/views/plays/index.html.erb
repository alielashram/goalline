<%= render 'layouts/form' %>
<div class="goalline-dash">
  <p class="goal_name goal_name_pb"><%= @goal.name %></p>
  <h1>Playbook</h1>

  <table>
    <tr>
      <th>Play</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

  <% @plays.each do |play| %>
    <tr>
      <td><%= play.play %></td>
      <td><%= play.notes %></td>
      <!-- <td><%= play.goal_id %></td> -->
      <td><%= link_to 'Show', goal_play_path(@goal, play) %></td>
      <td><%= link_to 'Edit', edit_goal_play_path(@goal, play) %></td>
      <td><%= link_to 'Destroy', [@goal, play], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'Goallines', goals_path, :class => %> |
  <%= link_to 'New play', new_goal_play_path(@goal) %>
</div>
